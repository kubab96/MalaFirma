@model IEnumerable<Wymaganie>
@{
    ViewData["Title"] = "Index";
}
<partial name="_Notification" />

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Wymagania</h2>
        </div>
        <div class="col-6 text-end">
            
            <a asp-controller="Wymaganie" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Utwórz wymaganie
            </a>
        </div>
    </div>
    <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Nazwa
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="30%" >
                        @obj.Nazwa
                    </td>
                    <td style="display: block; margin:auto">

                            <a asp-controller="Wymaganie" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary" style="width:40%; ">
                                <i class="bi bi-pencil-square"></i> Edytuj
                            </a>
                            <a asp-controller="Wymaganie" asp-action="Delete" class="btn btn-danger delete "
                       data-id="@obj.Id"
                       data-controller="Wymaganie"
                       data-action="Delete" style="width:40%">
                            <i class="bi bi-trash3-fill"></i> Usuń
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>