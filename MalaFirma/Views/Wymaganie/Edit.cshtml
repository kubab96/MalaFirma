@model Wymaganie

<form method="post" asp-action="Edit">
    <div class="border pt-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edytuj wymaganie</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Nazwa"></label>
            <input asp-for="Nazwa" class="form-control" />
            <span asp-validation-for="Nazwa" class="text-danger"></span>
        </div>
        
        <button type="submit" class="btn btn-primary" style="width:150px">Edytuj</button>
        <a asp-controller="Wymaganie" asp-action="Index" class="btn btn-primary" style="width:150px">
            Wróć do wymagań
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}