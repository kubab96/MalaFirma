@model Szkolenie
@{
    ViewData["Title"] = "Szczególy szkolenia";
}
<partial name="_Notification" />

<div class="container p-3">
        <div class="card shadow mb-4" style="margin:15px">
            <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Szkolenie</h6>
        </div>
        <br />

        <div class="card-body">

            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Temat)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Temat)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.RodzajSz)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.RodzajSz)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DataRozpoczecia)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DataRozpoczecia)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DataZakonczenia)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DataZakonczenia)
                </dd>
                @if (@Model.Uwagi != null)
                {
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Uwagi)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Uwagi)
                    </dd>
                }
                else
                {
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Uwagi)
                    </dt>
                    <dd class="col-sm-10">
                        <h7>Brak</h7>
                    </dd>
                }
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Status)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Status)
                </dd>
            </dl>




            <a class="btn btn-danger delete"
               data-id="@Model.Id"
               data-controller="Szkolenie"
               data-action="Delete"
               redirectUrl="Index"
               data-body-message="Czy napewno chcesz usunąć to szkolenie?">
                <i class="bi bi-trash3-fill"></i> Usuń
            </a>
            <a asp-controller="Szkolenie" asp-action="Upsert" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="bi bi-pencil-square"></i> Edytuj
            </a>
            <a asp-controller="Szkolenie" asp-action="EndSzkolenie" asp-route-id="@Model.Id" id="btn" class="btn btn-info" hidden>
                <i class="bi bi-pencil-square"></i> Zakończ
            </a>
            <a asp-controller="Szkolenie" asp-action="Index" class="btn btn-dark" style="margin-right:5px; float:right;"><i class="bi bi-person-check"></i> Lista szkoleń</a>


             <input type="file" id="formFile" name="file" class="form-control" hidden/>
                    <button type="submit" class="btn btn-primary" onclick="return ValidateInput()">Zakończ szkolenie</button>
        </div>


    </div>
</div>


@section Scripts{
    @{

    }
<script>

function ValidateInput(){
    if(document.getElementById("formFile").value==""){
        Swal.fire({
  title: 'Zakończyć szkolenie?',
  icon: 'question',
  showCancelButton: true,
  confirmButtonColor: '#3085d6',
  cancelButtonColor: '#d33',
  cancelButtonText: 'Nie',
  confirmButtonText: 'Tak'
}).then((result) => {
  if (result.isConfirmed) {
      Swal.fire(
      'Zakończono!',
      'Szkolenie zostało pomyślnie zakończone.',
      'success'
    )
    document.getElementById("btn").click();
  }
});
    return false;
    }
    return true;
}


</script>

}