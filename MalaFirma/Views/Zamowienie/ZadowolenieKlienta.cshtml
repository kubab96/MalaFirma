@model ZamowienieWymaganieVM
@{
    ViewData["Title"] = "Zadowolenie klienta";
}
<partial name="_Notification" />

<div class="container p-3">
        <div class="card shadow mb-4" style="margin:15px">
            <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Zadowolenie klienta</h6>
        </div>
        <br />

        <div class="card-body">

            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ZadowolenieKlienta.Jakosc)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ZadowolenieKlienta.Jakosc)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ZadowolenieKlienta.CzasRealizacji)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ZadowolenieKlienta.CzasRealizacji)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ZadowolenieKlienta.Zamowienie.Nazwa)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ZadowolenieKlienta.Zamowienie.Nazwa)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ZadowolenieKlienta.Klient.NazwaKlienta)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ZadowolenieKlienta.Klient.NazwaKlienta)
                </dd>
            </dl>

            <a asp-controller="Zamowienie" asp-action="EditZadowolenie" asp-route-id="@Model.ZadowolenieKlienta.Id" asp-route-zamowienieId="@Model.ZadowolenieKlienta.ZamowienieId" class="btn btn-warning" style="margin-right:5px; float:right;">
                <i class="bi bi-pencil-square"></i> Edytuj
            </a>
            <a asp-controller="Zamowienie" asp-action="DetailsZamowienia" asp-route-id="@Model.ZadowolenieKlienta.ZamowienieId" class="btn btn-primary">
                <i class="bi bi-arrow-90deg-left"></i> Powrót
            </a>
        </div>


    </div>
</div>