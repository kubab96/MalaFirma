@model ZamowienieProcesVM

<div class="col-xl-12">
    <div class="card mb-4">
        <div class="card-header">
            <h6 class="m-0 font-weight-bold text-primary">Dane zamówienia</h6>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label asp-for="Zamowienia.Nazwa"></label>
                <input asp-for="Zamowienia.Nazwa" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Zamowienia.UwagiZamowienia"></label>
                <input asp-for="Zamowienia.UwagiZamowienia" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Zamowienia.DataZamowienia"></label>
                <input asp-for="Zamowienia.DataZamowienia" class="form-control" />
            </div>
            @*<div class="card">
                <div class="card-body">
                This is some text within a card body.
                </div>
                </div>*@
        </div>
        <hr />
        <div class="card-header">
            <h6 class="m-0 font-weight-bold text-primary">Procesy</h6>
        </div>

        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Nazwa</th>
                    <th>Wymaganie</th>

                </tr>
                @foreach (var obj in Model.Procesy)
                {
                    <tr>
                        <td width="30%">@obj.Nazwa</td>
                        <td width="70%">@obj.Wymaganie</td>
                    </tr>
                }
        </table>
        
    </div>
    <a asp-controller="Zamowienie" asp-action="CreateProces" asp-route-id="@Model.Zamowienia.Id" class="btn btn-primary">
            Dodaj wymaganie
        </a>
        <a asp-controller="Zamowienie" asp-action="Edit" asp-route-id="@Model.Zamowienia.Id" class="btn btn-warning">
            <i class="bi bi-pencil-square"></i> Edytuj
        </a>
</div>