@model ZamowienieWymaganieVM
<partial name="_Notification" />

<div class="container p-3">
        <div class="card shadow mb-4" style="margin:15px">
            <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Wymagania do zamówienia - @Model.Zamowienie.Nazwa</h6>
        </div>
        <div class="card-body">
            <a asp-controller="Zamowienie" asp-action="AddWymaganie" asp-route-idZamowienia="@Model.Zamowienie.Id"  class="btn btn-success" style="margin-bottom:15px; float:right">
                <i class="bi bi-plus-circle"></i> &nbsp; Utwórz wymaganie
            </a>
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Nazwa wymagania</th>
                        <th>Ilość</th>
                        <th></th>

                    </tr>
                    @foreach (var obj in Model.Wymagania)
                    {
                        <tr>
                            <td width="65%">@obj.Nazwa</td>
                            <td width="10%">@obj.Ilosc</td>
                            <td width="40%">
                                <a asp-controller="Zamowienie" asp-action="EditWymaganie" asp-route-id="@obj.Id" class="btn btn-warning">
                                    <i class="bi bi-pencil-square"></i> Edytuj
                                </a>
                                <a class="btn btn-danger delete"
                               data-id="@obj.Id"
                               data-controller="Zamowienie"
                               data-action="DeleteWymaganie"
                               data-body-message="Czy napewno chcesz usunąć to wymaganie?">
                                    <i class="bi bi-trash3-fill"></i> Usuń
                                </a>
                            </td>

                        </tr>
                    }
            </table>
            <a asp-controller="Zamowienie" asp-action="DetailsZamowienia" asp-route-id="@Model.Zamowienie.Id" class="btn btn-primary">
                <i class="bi bi-arrow-90deg-left"></i> Wróć do zamówienia
            </a>
        </div>
    </div>
</div>