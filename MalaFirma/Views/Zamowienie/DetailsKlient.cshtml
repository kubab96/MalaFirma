@model Klient
@{
    ViewData["Title"] = "Klient";
}
<partial name="_Notification" />

<div class="container p-3">
        <div class="card shadow mb-4" style="margin:15px">
            <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">@Model.NazwaKlienta</h6>
        </div>
        <br />

        <div class="card-body">

            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.NazwaKlienta)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.NazwaKlienta)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Kraj)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Kraj)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Miasto)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Miasto)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.UlicaNumer)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.UlicaNumer)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.KodPocztowy)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.KodPocztowy)
                </dd>
            </dl>




            <a class="btn btn-danger delete"
             style="margin-right:5px; float:right;"
               data-id="@Model.Id"
               data-controller="Zamowienie"
               data-action="DeleteKlient"
               redirectUrl="Klient"
               data-body-message="Czy napewno chcesz usunąć tego klienta?">
                <i class="bi bi-trash3-fill"></i> Usuń
            </a>
            <a asp-controller="Zamowienie" asp-action="EditKlient" asp-route-id="@Model.Id" class="btn btn-warning"  style="margin-right:5px; float:right;">
                <i class="bi bi-pencil-square"></i> Edytuj
            </a>
            <a asp-controller="Zamowienie" asp-action="Klient" class="btn btn-primary"><i class="bi bi-arrow-90deg-left"></i> Powrót</a>
        </div>


    </div>
</div>