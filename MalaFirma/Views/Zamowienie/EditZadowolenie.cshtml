@model ZadowolenieKlienta
<partial name="_Notification" />

<form method="post">
    <div class="container p-3">
        <div class="card shadow mb-4" style="margin:15px">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Zadowolenie klienta</h6>
            </div>
            <div class="card-body">
                <input asp-for="ZamowienieId" hidden />
                <input asp-for="KlientId" hidden />
                <div class="mb-3">
                    <label asp-for="Jakosc"></label>
                    <input asp-for="Jakosc" class="form-control" />
                    <span asp-validation-for="Jakosc" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="CzasRealizacji"></label>
                    <input asp-for="CzasRealizacji" class="form-control" />
                    <span asp-validation-for="CzasRealizacji" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Uwagi"></label>
                    <input asp-for="Uwagi" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="DataZakonczeniaZadowolenia"></label>
                    <input asp-for="DataZakonczeniaZadowolenia" class="form-control" />
                    <span asp-validation-for="DataZakonczeniaZadowolenia" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-info" style="margin-right:5px; float:right;">Edytuj</button>
                <a asp-controller="Zamowienie" asp-action="ZadowolenieKlienta" asp-route-idZamowienia="@Model.ZamowienieId" class="btn btn-primary">
                <i class="bi bi-arrow-90deg-left"></i> Powrót
            </a>
            </div>
        </div>

    </div>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
    }