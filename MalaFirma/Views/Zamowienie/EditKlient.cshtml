@model Klient

<form method="post">
    <div class="col-xl-12">
        <div class="card mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Edycja klienta</h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label asp-for="NazwaKlienta"></label>
                    <input asp-for="NazwaKlienta" class="form-control" />
                    <span asp-validation-for="NazwaKlienta" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Kraj"></label>
                    <input asp-for="Kraj" class="form-control" />
                    <span asp-validation-for="Kraj" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Miasto"></label>
                    <input asp-for="Miasto" class="form-control" />
                    <span asp-validation-for="Miasto" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="UlicaNumer"></label>
                    <input asp-for="UlicaNumer" class="form-control" />
                    <span asp-validation-for="UlicaNumer" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="KodPocztowy"></label>
                    <input asp-for="KodPocztowy" class="form-control" />
                    <span asp-validation-for="KodPocztowy" class="text-danger"></span>
                </div>


                <button type="submit" class="btn btn-primary" style="width:150px">Edytuj</button>
                <a asp-controller="Zamowienie" asp-action="Klient" class="btn btn-primary" style="width:150px">
                    Wróć do listy klientów
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}