@model IEnumerable<Klient>
@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />

<div class="container p-3">


    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Klienci</h6>
        </div>
        <br />
        <div class="col-12 text-end">
            <a asp-controller="Zamowienie" asp-action="CreateKlient" class="btn btn-primary" style="margin-right:25px">
                <i class="bi bi-plus-circle"></i> &nbsp; Utwórz klienta
            </a>
        </div>
        @if (!Model.Any())
        {
            <h1 class="text-center">Brak klientów</h1>
        }
        else
        {
            <div class="card-body">
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                Nazwa klienta
                            </th>
                            <th>
                                Kraj
                            </th>
                            <th>
                                Miasto
                            </th>
                            <th>
                                Ulica oraz numer
                            </th>
                            <th>
                                Kod pocztowy
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in Model)
                        {
                            <tr>
                                <td width="20%">
                                    @obj.NazwaKlienta
                                </td>
                                <td width="10%">
                                    @obj.Kraj
                                </td>
                                <td width="10%">
                                    @obj.Miasto
                                </td>
                                <td width="15%">
                                    @obj.UlicaNumer
                                </td>
                                <td width="10%">
                                    @obj.KodPocztowy
                                </td>
                                <td style="display: block; margin:auto">

                                    
                                    <a class="btn btn-danger delete"
                               data-id="@obj.Id"
                               data-controller="Zamowienie"
                               data-action="DeleteKlient"
                               data-body-message="Czy napewno chcesz usunąć tego klienta?">
                                        <i class="bi bi-trash3-fill"></i> Usuń
                                    </a>
                                    <a asp-controller="Zamowienie" asp-action="EditKlient" asp-route-id="@obj.Id" class="btn btn-info" style="width:40%; ">
                                        <i class="bi bi-pencil-square"></i> Edytuj
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
