@model IEnumerable<Zamowienie>
@{
    ViewData["Title"] = "Index";
}
<partial name="_Notification" />

<div class="container p-3">


    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Zamówienia</h6>
        </div>
        <br />
        <div class="col-12 text-end">
            <a asp-controller="Zamowienie" asp-action="Create" class="btn btn-primary" style="margin-right:25px">
                <i class="bi bi-plus-circle"></i> &nbsp; Utwórz zamówienie
            </a>
        </div>
        @if (!Model.Any())
        {
            <h1 class="text-center">Brak zamówień</h1>
        }
        else
        {
            <div class="card-body">
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                Nazwa
                            </th>
                            <th>
                                Uwagi zamówienia
                            </th>
                            <th>
                                Data zamówienia
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in Model)
                        {
                            @if(obj.Potwierdzenie == true)
                            {
                            <tr>
                                <td width="20%">
                                    @obj.Nazwa
                                </td>
                                <td width="20%">
                                    @obj.UwagiZamowienia
                                </td>
                                <td width="20%">
                                    @obj.DataZamowienia
                                </td>

                                <td style="display: block; margin:auto">

                                    
                                    <a class="btn btn-danger delete"
                               data-id="@obj.Id"
                               data-controller="Zamowienie"
                               data-action="Delete"
                               data-body-message="Czy napewno chcesz usunąć to zamówienie?">
                                        <i class="bi bi-trash3-fill"></i> Usuń
                                    </a>
                                    <a asp-controller="Zamowienie" asp-action="DetailsZamowienia" asp-route-id="@obj.Id" class="btn btn-info" style="width:40%; ">
                                        <i class="bi bi-pencil-square"></i> Szczegóły zamówienia
                                    </a>
                                    
                                </td>
                            </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
