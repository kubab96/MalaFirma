@model PrzewodnikPracy
@{
    <partial name="_Notification" />
};
<form method="post">
    <div class="container p-3">
        <div class="card shadow mb-4" style="margin:15px">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">@(Model.WynikPrzewodnika != null ? "Edycja wyniku przewodnika" : "Zakończ przewodnik")</h6>
            </div>
            <div class="card-body">
                <input asp-for="Id" hidden />
                <input asp-for="NumerPrzewodnika" hidden />
                <input asp-for="WymaganieId" hidden />
                <input asp-for="Rysunek" hidden />
                <input asp-for="NumerRysunku" hidden />
                <div class="mb-3">
                    <label>Wynik przewodnika</label>
                    <input asp-for="WynikPrzewodnika" class="form-control" />
                </div>
                <div class="mb-3">
                    <label>Zidentyfikowane problemy</label>
                    <input asp-for="ZidentyfikowaneProblemy" class="form-control" />
                </div>
                <div class="mb-3">
                    <label>Planowane działania</label>
                    <input asp-for="PlanowaneDzialania" class="form-control" />
                </div>
                @if (Model.WynikPrzewodnika != null)
                {
                    <div class="mb-3">
                        <label>Data zakończenia przewodnika</label>
                        <input asp-for="DataZakonczeniaPrzewodnika" class="form-control" />
                    </div>
                }
                @if (Model.WynikPrzewodnika != null)
                {
                    <button type="submit" class="btn btn-info">Edytuj</button>
                }
                else
                {
                    <button type="submit" class="btn btn-info">Zakończ przewodnik</button>
                }
                <a asp-controller="PrzewodnikPracy" asp-action="PrzewodnikPracy" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="bi bi-arrow-90deg-left"></i> Wróć do przewodnika
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }