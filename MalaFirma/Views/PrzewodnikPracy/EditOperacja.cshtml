@model Operacja
@{
    <partial name="_Notification" />
};
<form method="post">
    <div class="container p-3">
        <div class="card shadow mb-4" style="margin:15px">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Edycja operacji</h6>
            </div>
            <div class="card-body">
                    <input asp-for="WymaganieId" class="form-control" hidden />
                <div class="mb-3">
                    <label>Treść operacji</label>
                    <input asp-for="TrescOperacji" class="form-control" />
                </div>
                <div class="mb-3">
                    <label>Data wykonania</label>
                    <input asp-for="DataWykonania" class="form-control" />
                </div>

                <button type="submit" class="btn btn-info">Edytuj</button>
                <a asp-controller="PrzewodnikPracy" asp-action="Operacja" asp-route-id="@Model.WymaganieId" class="btn btn-primary">
                    <i class="bi bi-arrow-90deg-left"></i> Wróć do przewodnika
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}