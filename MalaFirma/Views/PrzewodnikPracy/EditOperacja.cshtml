@model Operacja
@{
    <partial name="_Notification" />
    ViewData["Title"] = "Edytuj operacje";

}
<form method="post">
    <div class="container p-3">
        <div class="card shadow mb-4" style="margin:15px">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Edycja operacji</h6>
            </div>
            <div class="card-body">
                    <input asp-for="PrzewodnikPracyId" class="form-control" hidden />
                <div class="mb-3">
                    <label>Treść operacji</label>
                    <input asp-for="TrescOperacji" class="form-control" />
                    <span asp-validation-for="TrescOperacji" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label>Data wykonania</label>
                    <input asp-for="DataWykonania" class="form-control" />
                    <span asp-validation-for="DataWykonania" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Edytuj</button>
                <a asp-controller="PrzewodnikPracy" asp-action="PrzewodnikPracy" asp-route-id="@Model.PrzewodnikPracyId" class="btn btn-dark">
                    Anuluj
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}