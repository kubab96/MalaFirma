@model PytanieVM
@{
    ViewData["Title"] = "Index";
}
<partial name="_Notification" />

<div class="container p-3">

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Utwórz pytanie</h6>
        </div>

        <div class="card-body">
            <form method="post">
               

                    <div class="mb-3">
                        <label asp-for="Pytanie.Nazwa"></label>
                        <input asp-for="Pytanie.Nazwa" class="form-control" />
                        <span asp-validation-for="Pytanie.Nazwa" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary" style="width:150px">Dodaj</button>
                
            </form>
        </div>
    </div>


    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Pytania</h6>
        </div>

        <div class="card-body">
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Nazwa</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model.Pytania)
                    {
                        <tr>
                            <td width="70%">
                                @obj.Nazwa
                            </td>

                            <td style="display: block; margin:auto">

                                <a asp-controller="Przeglad" asp-action="EditPytanie" asp-route-id="@obj.Id" class="btn btn-primary" style="width:40%; ">
                                    <i class="bi bi-pencil-square"></i> Edytuj
                                </a>
                                <a class="btn btn-danger delete "
                               data-id="@obj.Id"
                               data-controller="Przeglad"
                               data-action="DeletePytanie" style="width:40%"
                               data-body-message="Czy napewno chcesz usunąć to pytanie?">

                                    <i class="bi bi-trash3-fill"></i> Usuń
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>



</div>
