@model Pytanie

<form method="post">
    <div class="border pt-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Utwórz pytanie</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Nazwa"></label>
            <input asp-for="Nazwa" class="form-control" />
        </div>
    <button type="submit" class="btn btn-primary" style="width:150px">Dodaj</button>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}