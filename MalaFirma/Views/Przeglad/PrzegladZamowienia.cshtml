@model PrzegladVM
@{
    ViewData["Title"] = "Index";
    var query =
    from pyt in Model.Pytania
    join odp in Model.Odpowiedzi on pyt.Id equals odp.PytanieId into op
    from pytodp in op.DefaultIfEmpty()
    select new
    {
        pyt.Nazwa,
        pyt.Id,
        Odpow = pytodp?.Status ?? string.Empty,
        IdOdp = pytodp?.Id
    };
}
<partial name="_Notification" />

<div class="container p-3">


    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Przegląd zamówieia</h6>
        </div>
        <br />

        <div class="card-body">
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Nazwa</th>
                        <th>Odpowiedź</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in query)
                    {
                        <tr>
                            <td width="80%">
                                @obj.Nazwa
                            </td>
                            <td width="10%">
                                @if (obj.Odpow == string.Empty)
                                {
                                     <div>-</div>
                                }
                                else
                                {
                                   @obj.Odpow 
                                }
                                
                            </td>
                            

                            <td>
                                @if (obj.Odpow == string.Empty)
                                {
                                    <a asp-controller="Przeglad" asp-action="AddOdpowiedz" asp-route-idZamowienia="@Model.Zamowienie.Id" asp-route-idPytania="@obj.Id" class="btn btn-primary">
                                        <i class="bi bi-pencil-square"></i> Odpowiedz
                                    </a>
                                }
                                else
                                {
                                    <a asp-controller="Przeglad" asp-action="EditOdpowiedz" asp-route-idOdpowiedzi="@obj.IdOdp" asp-route-idZamowienia="@Model.Zamowienie.Id" asp-route-idPytania="@obj.Id" class="btn btn-primary">
                                        <i class="bi bi-pencil-square"></i> Edytuj
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @if (Model.Odpowiedzi.Count() == Model.Pytania.Count())
        {
            <a asp-controller="Przeglad" asp-action="WynikPrzegladu" asp-route-idZamowienia="@Model.Zamowienie.Id" class="btn btn-primary">
                <i class="bi bi-shield-check"></i> Wynik przeglądu
            </a>
        }
        </div>
        
    </div>
</div>