@model IEnumerable<Dostawca>
@{
    ViewData["Title"] = "Index";
}
<partial name="_Notification" />

<div class="container p-3">
        <div class="card shadow mb-4" style="margin:15px">
            <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Dostawcy</h6>
        </div>
        <br />
        <div class="col-12 text-end">
            <a asp-controller="Dostawca" asp-action="Upsert" class="btn btn-success" style="margin-right:25px">
                <i class="bi bi-plus-circle"></i> &nbsp; Dodaj dostawcę
            </a>
        </div>

            <div class="card-body">
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                Nazwa dostawcy
                            </th>
                            <th>
                                Adres dostwacy
                            </th>
                            <th>
                                Zakres dzialalnosci
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in Model)
                        {

                            <tr>
                                <td width="20%">
                                    @obj.NazwaDostawcy
                                </td>
                                <td width="30%">
                                    @obj.AdresDostwacy
                                </td>
                                <td width="30%">
                                    @obj.ZakresDzialalnosci
                                </td>

                                <td style="display: block; margin:auto">

                                    
                                 @*   <a class="btn btn-danger delete"
                               data-id="@obj.Id"
                               data-controller="Dostawca"
                               data-action="Delete"
                               data-body-message="Czy napewno chcesz usunąć tego dostawcę?">
                                        <i class="bi bi-trash3-fill"></i> Usuń
                                    </a>*@
                                    <a asp-controller="Dostawca" asp-action="DetailsDostawca" asp-route-id="@obj.Id" class="btn btn-info">
                                        Szczególy
                                    </a>
                                    
                                </td>
                            </tr>
                            
                        }
                    </tbody>
                </table>
            </div>
        
    </div>
</div>
