@model Audyt
@{
    ViewData["Title"] = "Audyt";
}
<partial name="_Notification" />

<div class="container p-3">
        <div class="card shadow mb-4" style="margin:15px">
            <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Audyt</h6>
        </div>
        <br />

        <div class="card-body">

            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Temat)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Temat)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.RodzajAudytu)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.RodzajAudytu)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Opis)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Opis)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DataRozpoczecia)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DataRozpoczecia)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DataZakonczenia)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DataZakonczenia)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Uwagi)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Uwagi)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Status)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Status)
                </dd>
                @if (Model.TerminUsuniecia != null)
                {
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.TerminUsuniecia)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TerminUsuniecia)
                    </dd>
                }
            </dl>

            <a asp-controller="Audyt" asp-action="Index" class="btn btn-primary"><i class="bi bi-arrow-90deg-left"></i> Powrót</a>


            <a class="btn btn-danger delete"
            style="float:right"
               data-id="@Model.Id"
               data-controller="Audyt"
               data-action="Delete"
               redirectUrl="Index"
               data-body-message="Czy napewno chcesz usunąć ten audyt?">
                <i class="bi bi-trash3-fill"></i> Usuń
            </a>
            
            <a asp-controller="Audyt" asp-action="Upsert" asp-route-id="@Model.Id" class="btn btn-warning" style="margin-right:5px; float:right">
                <i class="bi bi-pencil-square"></i> Edytuj
            </a>
            <a asp-controller="Audyt" asp-action="EndAudyt" asp-route-id="@Model.Id" id="btn" class="btn btn-info" style="margin-right:5px; float:right" hidden>
                <i class="bi bi-pencil-square"></i> Zakończ
            </a>
            


            <input type="file" id="formFile" name="file" class="form-control" hidden />
            <button type="submit" class="btn btn-primary" onclick="return ValidateInput()" style="margin-right:5px; float:right;" >Zatwierdź</button>
        </div>


    </div>
</div>


@section Scripts{
    @{

    }
<script>

    function ValidateInput(){
        if(document.getElementById("formFile").value==""){
            Swal.fire({
      title: 'Zakończyć audyt?',
      icon: 'question',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      cancelButtonText: 'Nie',
      confirmButtonText: 'Tak'
    }).then((result) => {
      if (result.isConfirmed) {
          Swal.fire(
          'Zakończono!',
          'Audyt został pomyślnie zakończony.',
          'success'
        )
        document.getElementById("btn").click();
      }
    });
        return false;
        }
        return true;
    }


</script>

}