@model IEnumerable<Audyt>
@{
    ViewData["Title"] = "Audyty";
}
<partial name="_Notification" />

<div class="container p-3">
    <div class="card shadow mb-4" style="margin:15px">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Audyty</h6>
        </div>



        <div class="card-body">
            <a asp-controller="Audyt" asp-action="Upsert" class="btn btn-success" style="margin-bottom:15px; float:right">
                <i class="bi bi-plus-circle"></i> &nbsp; Dodaj audyt
            </a>
            @if (!Model.Any())
            {
                <div>
                    <br>
                <b>Brak audytów.</b>
                </div>
            }
            else
            {
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                Temat audytu
                            </th>
                            <th>
                                Termin
                            </th>
                            <th>
                                Rodzaj
                            </th>
                            <th>
                                Status
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in Model)
                        {

                            <tr>
                                <td width="20%">
                                    @obj.Temat
                                </td>
                                <td width="30%">
                                    @obj.DataRozpoczecia.ToShortDateString() - @obj.DataZakonczenia.ToShortDateString()
                                </td>
                                <td width="30%">
                                    @obj.RodzajAudytu
                                </td>
                                <td width="30%">
                                    @obj.Status
                                </td>

                                <td>
                                    <a asp-controller="Audyt" asp-action="DetailsAudyt" asp-route-id="@obj.Id" class="btn btn-info">
                                        Szczególy
                                    </a>

                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            }
        </div>

    </div>
</div>
