                <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Wykonane operacje</h6>
                </div>
                <div class="card-body">
                <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                <tr>
                <th>
                Treść operacji
                </th>
                <th>
                Data wykonania
                </th>
                </tr>
                </thead>
                <tbody>
                @foreach (var obj in Model.Operacje)
                {
                <tr>
                <td width="20%">
                @obj.TrescOperacji
                </td>
                <td width="20%">
