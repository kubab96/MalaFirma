@model TypNarzedzia

<div class="container p-3">


    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Utwórz typ narzędzia</h6>
        </div>


        <div class="card-body">
            <form method="post">

                    <div class="mb-3">
                        <label asp-for="NazwaTypu"></label>
                        <input asp-for="NazwaTypu" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-primary" style="width:150px">Edytuj</button>
                    <a asp-controller="Narzedzie" asp-action="TypNarzedzia" class="btn btn-primary">Wróć</a>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}