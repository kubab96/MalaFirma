@model IEnumerable<TypNarzedzia>
@{
    ViewData["Title"] = "Index";
}
<partial name="_Notification" />

<div class="container p-3">


    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Typ narzędzi</h6>
        </div>
        <br />
        <div class="col-12 text-end">
            <a asp-controller="Narzedzie" asp-action="CreateTypNarzedzia" class="btn btn-primary" style="margin-right:25px">
                <i class="bi bi-plus-circle"></i> &nbsp; Dodaj typ narzędzia
            </a>
        </div>

            <div class="card-body">
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                Typ narzędzia
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in Model)
                        {

                            <tr>
                                <td width="84%">
                                    @obj.NazwaTypu
                                </td>
                                <td style="display: block; margin:auto">

                                    
                                    <a class="btn btn-danger delete"
                               data-id="@obj.Id"
                               data-controller="Narzedzie"
                               data-action="DeleteTypNarzedzia"
                               data-body-message="Czy napewno chcesz usunąć ten typ narzędzia?">
                                        <i class="bi bi-trash3-fill"></i> Usuń
                                    </a>
                                    <a asp-controller="Narzedzie" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-info" style="width:40%; ">
                                        <i class="bi bi-pencil-square"></i> Edytuj
                                    </a>
                                </td>
                            </tr>
                            
                        }
                    </tbody>
                </table>
            </div>
        
    </div>
</div>
