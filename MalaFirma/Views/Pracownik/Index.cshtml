@model IEnumerable<UzytkownicyVM>  
<partial name="_Notification" />

<div class="container p-3">


    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Pracownicy</h6>
        </div>
        <br />
        <div class="col-12 text-end">
            <a asp-controller="Dostawca" asp-action="Upsert" class="btn btn-primary" style="margin-right:25px">
                <i class="bi bi-plus-circle"></i> &nbsp; Dodaj pracownika
            </a>
        </div>

            <div class="card-body">
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                Nazwa używkownika
                            </th>
                            <th>
                                Imię
                            </th>
                            <th>
                                Nazwisko
                            </th>
                            <th>
                                Rola
                            </th>
                            <th>
                                
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in Model)
                        {

                            <tr>
                                <td width="20%">
                                    @obj.Username
                                </td>
                                <td width="20%">
                                    @obj.Imie
                                </td>
                                <td width="20%">
                                    @obj.Nazwisko
                                </td>
                                <td width="25%">
                                    @obj.Role
                                </td>

                                <td style="display: block; margin:auto">

                                   
                                    <a asp-controller="Dostawca" asp-action="DetailsDostawca" asp-route-id="" class="btn btn-info">
                                        Szczególy
                                    </a>
                                    
                                </td>
                            </tr>
                            
                        }
                    </tbody>
                </table>
            </div>
        
    </div>
</div>
