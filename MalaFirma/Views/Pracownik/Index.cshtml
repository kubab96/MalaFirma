@model IEnumerable<UzytkownicyVM>  

<div class="container p-3">


    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Pracownicy</h6>
        </div>
        <br />
        <div class="col-12 text-end">

        </div>

            <div class="card-body">
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                Nazwa używkownika
                            </th>
                            <th>
                                Imię
                            </th>
                            <th>
                                Nazwisko
                            </th>
                            <th>
                                Rola
                            </th>
                            <th>
                                
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in Model)
                        {

                            <tr>
                                <td width="20%">
                                    @obj.Username
                                </td>
                                <td width="20%">
                                    @obj.Imie
                                </td>
                                <td width="20%">
                                    @obj.Nazwisko
                                </td>
                                <td width="25%">
                                    @obj.Role
                                </td>
                            <td width="25%">
                                <a asp-controller="Pracownik" asp-action="EditUser" asp-route-id="@obj.Id" class="btn btn-info ">
                                    <i class="bi bi-pencil-square"></i> e
                                </a>
                            </td>
                            </tr>
                            
                        }
                    </tbody>
                </table>
            </div>
        
    </div>
</div>
